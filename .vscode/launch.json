    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: Terminal (integrated)",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/Hybrid-P2P_ChatPy/",
            "program": "${file}",
            "console": "integratedTerminal",
            "args":["david_dbg","7001","localhost","5002"]
            //"args":["5000"]
        },
        {
            "type": "gdb",
            "request": "launch",
            "name": "Launch Program",
            "target": "./Ping_over_TCP-UDP/C_version/Ping_over_TCP_OC/ping_oc",

            "cwd": "${workspaceRoot}"
        },
        {
            "name": "conf 1",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Ping_over_TCP-UDP/C_version/Ping_over_TCP_OC/ping_oc",
            "args": ["localhost","5000"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}